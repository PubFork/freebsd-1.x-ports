%      it to 9999.  We also use `sloppy' value of 1pt for
%      \verb=\hfuzz= and \verb=\vfuzz= all the time instead of only
%      within the scope of a \verb=\sloppy= declaration.
%    \begin{macrocode}
\def\sloppy{\tolerance9999\relax}
\hfuzz=1pt \vfuzz=\hfuzz
