%
%      The following example of addresses for three authors of
%      a tri-author paper illustrates
%
%        \author{Roland Campbell}
%        \address{Department of Mathematics\\
%          Pennsylvania State University\\
%          Pittsburgh, Pennsylvania 13593}
%        \email[R.~Campbell]{campr@@galois.psu.edu}
%        
%        \author{Mark M. Dane}
%        % Same address as R. Campbell
%        \curraddr[M.~Dane]{Atmospheric Research Station\\
%          Pala Lundi, Fiji}
%        \email[M.~Dane]{DaneMark@@ffr.choice}
%        
%        \author{Jeremiah Jones}
%        \address[J.~Jones]{Department of Philosophy\\
%        Freedman College\\
%        Periwinkle, Colorado 84320}
%        \email[J.~Jones]{id739e@@oseoi44 (Bitnet)}
%
%        The contents of \@addresstoks:
%
%        {}{Mathematics Department\\University of Michigan\\Ann
%        Arbor, Michigan 48104}
%        {}{Atmo Research Station\\Pala Lundi, Fiji}
%        {}{DaneMark@@ffr.choice}
\newtoks\@addresstoks
%
\def\address{\@oparg\@xaddress[]}
% The job of \@xaddress is to add the sequence
%
%   \address{#1}{#2}{}{}{}{}
%
% to the token register \@addresstoks. Some or all of the empty
% groups may be subsequently filled in with data from \email
% or \curraddr.
%
\def\@xaddress[#1]#2{%
  \@addresstoks\expandafter{\the\@addresstoks\address{#1}{#2}{}{}{}{}}}
%
% Typesetting of the address information is done by \enddocument,
% by calling \@setaddress.
\def\@setaddress{%
  \par\expandafter\@ifnotempty\expandafter{\the\@addresstoks}{%
  \nobreak \begingroup \small
%      Address is supposed to go all on one line, so we redefine \verb=\\=
%      to just insert a comma instead of doing a line break.
%    \begin{macrocode}
  \def\\{\unskip, \ignorespaces}%
%    \end{macrocode}
%      No page breaks in the address section is accomplished by
%      \interlinepenalty\@M and by the \nobreak before the \bigskip.
%      A page break can be forced if necessary between addresses
%      by putting \pagebreak at the end of the first address.
%    \begin{macrocode}
  \interlinepenalty\@M
  \def\address##1##2##3##4##5##6{%
    \nobreak\bigskip\indent
% If the name of the author to whom this addres applies
% was given, typeset it
    \@ifnotempty{##1}{(\ignorespaces##1\unskip) }%
% Now the main part of the address:
    {\sc\ignorespaces##2}\par
% If current address was given, add that next:
    \@ifnotempty{##4}{\nobreak\indent{\it Current address}%
      \@ifnotempty{##3}{, \ignorespaces##3\unskip}\/:\space
      ##4\par}%
% And then email:
    \@ifnotempty{##6}{\nobreak\indent{\it E-mail address}%
      \@ifnotempty{##5}{, \ignorespaces##5\unskip}\/:\space
      ##6\par}%
  }% End definition of \address.
  \the\@addresstoks
  \endgroup
}% End of \@ifnotempty{\the\@addresstoks}
}%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% end of \@setaddress
%
%      \verb=\curraddr= adds to \verb=\@addresstoks=. \verb=\email= is
%      nearly the same as \verb=\curraddr= in its action on
%      \verb=\@addresstoks=, so they share a common
%      splitting/concatenating function called \verb|\@address@concat|.
%
%      The operation of these macros is such that the relative order of
%      \verb|\curraddr| and \verb|\email| in the user's document
%      doesn't matter; each one will be associated with the nearest
%      preceding \verb|\address| command, and address, current address,
%      and email address will print in the order dictated by AMS style.
%      
%    \begin{macrocode}
\def\curraddr{\@oparg\@xcurraddr[]}
\def\@xcurraddr[#1]#2{\@address@concat\curraddr{#1}{#2}{##5}{##6}}
%
\def\email{\@oparg\@xemail[]}
\def\@xemail[#1]#2{\@address@concat\email{##3}{##4}{#1}{#2}}
%    \end{macrocode}
%
%      The algorithm for \verb|\@address@concat| is complicated by the
%      fact that we want to store possibly several addresses in one and
%      the same token register; if a \verb|\curraddr| or \verb|\email|
%      command is encountered, we want to extract just the last
%      \verb|\address| token and its associated arguments, modify some
%      of the arguments, and then put the modified result back into the
%      \verb|\@addresstoks| register.
%
%      The method, then, consists of giving the \verb|\address| command
%      a temporary definition so that by executing
%      \verb|\the|\verb|\@addresstoks|, each \verb|\address| will move
%      itself and its arguments to token register 1; but first, in case
%      there are more than one \verb|\address| in \verb|\@addresstoks|,
%      the current contents of toks1 are moved into toks3. The result
%      is that after execution, toks3 holds all the addresses except
%      for the last one, which remains in toks1. We then carry out our
%      modifications on the address in toks1 (once again, by a
%      temporary redefinition of \verb|\address|, followed by execution
%      of \verb|\the|\verb|\toks1|), and tack the result on to the end
%      of toks3. Then toks3 holds everything we want, whereupon we 
%      transfer it back to \verb|\@addresstoks|.
%
%    \begin{macrocode}
\def\@address@concat#1#2#3#4#5{%
  \expandafter\@ifempty\expandafter{\the\@addresstoks}%
  {\errmessage{\string#1 can't precede \string\address.}}%
  {\begingroup \global\toks\@ne{}\global\toks\thr@@{}%
%    \end{macrocode}
%      Define \address to split up \@addresstoks according to what we
%      need.
%    \begin{macrocode}
    \def\address##1##2##3##4##5##6{\global\toks\thr@@\expandafter{%
      \the\toks\expandafter\thr@@\the\toks\@ne}%
      \global\toks\@ne{\address{##1}{##2}{##3}{##4}{##5}{##6}}}%
%    \end{macrocode}
%      Now execute \the\@addresstoks to perform the splitting:
%    \begin{macrocode}
    \the\@addresstoks
    \def\address##1##2##3##4##5##6{\global\toks\thr@@\expandafter{%
%    \end{macrocode}
%      The last four arguments of |\address| here are taken from the
%      last four arguments of |\@address@concat|; two of them will be
%      argument markers---e.g., ``|##5|'' and ``|##6|'' when the first
%      argument of |\@address@concat| is |\curraddr|---rather than
%      real text.
%    \begin{macrocode}
      \the\toks\thr@@\address{##1}{##2}{#2}{#3}{#4}{#5}}}%
    \the\toks\@ne
    \endgroup \@addresstoks\toks\thr@@
}}
%    \end{macrocode}
