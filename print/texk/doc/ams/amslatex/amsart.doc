% \changes{1.1}{18-APR-1991}{Changed `ctagsplit switch to true}
%      Centered tags should be the default in amsart, in keeping with
%      AMS conventions.
%    \begin{macrocode}
\ctagsplit@true
%    \end{macrocode}
