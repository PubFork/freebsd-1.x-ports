if pkg_info -e readline_bin ; then
	exit 0;
else
	echo 
	echo "Error:  This package will not work without readline_bin installed first." >/dev/tty
	if [ -f readline_bin.tgz ]; then
		echo -n "I see a readline_bin release here.  Would you like me to install it now? [yes] "
		read ans
		case "$ans" in
			[Nn]*)
				echo "Ok, please do it by hand and install this package again." 
				exit 1;
			;;
			[Yy]*|*)
				if pkg_add readline_bin.tgz ; then
					echo "Sorry, the pkg_add of readline_bin.tgz failed!  Please do it by hand." 
					exit 1;
				else
					echo "readline_bin added successfully! Proceeding." 
					exit 0;
				fi
			;;
		esac
	else
		echo "Please install package readline_bin before trying to install this package" 
		exit 1;
	fi
	echo
fi

